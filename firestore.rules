rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Everyone can read events, but only business users can write
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'BUSINESS' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'ADMIN');
    }
    
    // Users can read their own tickets, organizers can read tickets for their events
    match /tickets/{ticketId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid ||
         get(/databases/$(database)/documents/events/$(resource.data.eventId)).data.organizerId == request.auth.uid);
      allow write: if request.auth != null;
    }
    
    // Influencers can manage their own advertisements
    match /advertisements/{adId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (resource.data.influencerId == request.auth.uid ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'ADMIN');
    }
    
    // Users can read their own payment records
    match /payments/{paymentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if false; // Only cloud functions can write payments
    }
  }
}