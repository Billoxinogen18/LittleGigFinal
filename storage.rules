rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload images for events they create
    match /events/{eventId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users can upload their profile images
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Influencers can upload advertisement images
    match /advertisements/{adId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}